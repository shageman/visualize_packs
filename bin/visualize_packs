#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/visualize_packs/options'
require_relative '../lib/visualize_packs/options_parser'
require_relative '../lib/visualize_packs'

puts VisualizePacks.package_graph!(
  VisualizePacks::OptionsParser.parse(ARGV), 
  ParsePackwerk::Configuration.fetch.raw, 
  Packs.all.map { ParsePackwerk.find(_1.name) }
)
